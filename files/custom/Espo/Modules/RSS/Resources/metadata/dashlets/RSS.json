{
  "view": "rss:views/dashlets/rss-dashlet",
  "options": {
    "fields": {
      "title": {
        "type": "varchar",
        "trim": true,
        "required": true
      },
      "feed": {
        "type": "url",
        "required": true
      },
      "autorefreshInterval": {
        "type": "enumFloat",
        "options": [0, 0.5, 1, 2, 5, 10]
      },
      "includeArticleDescription": {
        "type": "bool",
        "required": false
      },
      "dateFormat": {
        "type": "enum",
        "options": [
          "System",
          "DD.MM.YYYY", 
          "MM/DD/YYYY", 
          "DD/MM/YYYY", 
          "YYYY-MM-DD", 
          "DD. MM. YYYY"
        ]
    },
    "timeFormat": {
      "type": "enum",
      "options": [
        "System",
        "HH:mm", 
        "hh:mma", 
        "hh:mmA", 
        "hh:mm A", 
        "hh:mm a"
      ]
  },
  "timeSeparator": {
    "type": "enum",
    "options": [
        " - ",
        ", ",
        " / "
    ]
}
    },
    "defaults": {
      "autorefreshInterval": 0.5,
      "includeArticleDescription": true,
      "dateFormat": "DD/MM/YYYY",
      "timeFormat": "HH:mm",
      "timeSeparator": ", "
    },
    "layout": [
      {
        "rows": [
          [
            {"name": "title"}
          ],
          [
            {"name": "feed"}
          ],
          [
            {"name": "autorefreshInterval"}, {"name": "includeArticleDescription"}
          ],
          [
            {"name": "dateFormat"}, {"name": "timeFormat"}, {"name": "timeSeparator"}
          ]
        ]
      }
    ]
  }
}
