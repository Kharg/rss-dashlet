{
  "view": "rss:views/dashlets/rss-dashlet",
  "options": {
    "fields": {
      "title": {
        "type": "varchar",
        "trim": true,
        "required": true
      },
      "feed": {
        "type": "url",
        "required": true
      },
      "autorefreshInterval": {
        "type": "enumFloat",
        "options": [0, 2, 5, 10]
      },
      "displayRecords": {
        "type": "enumInt",
        "options": [3,4,5,7,10,15,20,30,50]
    },
      "includeArticleDescription": {
        "type": "bool",
        "required": false
      },
      "showArticleInModal": {
        "type": "bool",
        "required": false
      },
      "includeArticleTime": {
        "type": "bool",
        "required": false
      },
      "dateFormat": {
        "type": "enum",
        "options": [
          "System",
          "DD.MM.YYYY", 
          "MM/DD/YYYY", 
          "DD/MM/YYYY", 
          "YYYY-MM-DD", 
          "DD. MM. YYYY"
        ]
    },
    "timeFormat": {
      "type": "enum",
      "options": [
        "System",
        "HH:mm", 
        "hh:mma", 
        "hh:mmA", 
        "hh:mm A", 
        "hh:mm a"
      ]
  },
  "timeSeparator": {
    "type": "enum",
    "options": [
        " - ",
        ", ",
        " / "
    ]
},
"sortDirection": {
  "type": "enum",
  "view": "views/dashlets/fields/records/sort-direction",
  "options": ["asc", "desc"],
  "translation": "EntityManager.options.sortDirection"
},
"dateTimeOption": {
  "type": "enum",
  "tooltip": true,
    "options": [
        "Dashlet",
        "Custom"
    ]
},
"momentDateTimeFormat": {
  "type": "varchar",
  "trim": true,
  "tooltip": true
}
    },
    "defaults": {
      "displayRecords": 15,
      "sortDirection": "desc",
      "autorefreshInterval": 5,
      "includeArticleDescription": true,
      "includeArticleTime": true,
      "dateFormat": "System",
      "timeFormat": "System",
      "timeSeparator": ", ",
      "dateTimeOption": "Dashlet",
      "momentDateTimeFormat": "llll",
      "showArticleInModal": false
    },
    "layout": [
      {
        "rows": [
          [
            {"name": "title"}
          ],
          [
            {"name": "feed"}
          ],
          [
            {"name": "includeArticleDescription"}, {"name": "includeArticleTime"}, {"name": "showArticleInModal"}
          ],
          [
            {"name": "autorefreshInterval"}, {"name": "displayRecords"}, {"name": "sortDirection"}
          ],
          [
            {"name": "dateFormat"}, {"name": "timeFormat"}, {"name": "timeSeparator"}
          ],
          [
            {"name": "dateTimeOption"}, {"name": "momentDateTimeFormat"}
          ]
        ]
      }
    ]
  }
}